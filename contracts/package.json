    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "cross-env": "^7.0.3",
    "hardhat": "^2.22.17",
    "hardhat-gas-reporter": "^1.0.10",
    "solc": "^0.8.20",
