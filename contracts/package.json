{
  "name": "@arbitrage/contracts",
  "version": "1.0.0",
  "description": "Flash loan arbitrage smart contracts",
  "main": "index.js",
  "overrides": {
    "cookie": "^1.1.1",
    "undici": "^7.19.1",
    "tar": "^7.5.6"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
