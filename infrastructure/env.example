# Environment Configuration for Arbitrage Detection System

# Node Environment
NODE_ENV=production
LOG_LEVEL=info

# Redis Configuration
# Option 1: Self-hosted Redis (recommended for Oracle ARM deployment)
#   Set REDIS_SELF_HOSTED=true and use localhost URL
#   @see docs/reports/DEEP_ENHANCEMENT_ANALYSIS_2026-02-22.md Item #1
# REDIS_SELF_HOSTED=true
# REDIS_URL=redis://:your_password@localhost:6379
# REDIS_PASSWORD=your_password
#
# Option 2: Upstash Redis (Free Tier - 10K commands/day limit)
# REDIS_URL=redis://username:password@host:port
# REDIS_PASSWORD=password
REDIS_URL=redis://username:password@host:port
REDIS_PASSWORD=password

# Blockchain RPC Endpoints (Free/Public)
# NOTE: Variable names must match docker-compose.partition.yml expectations
BSC_RPC_URL=https://bsc-dataseed1.binance.org
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
BASE_RPC_URL=https://mainnet.base.org
POLYGON_RPC_URL=https://polygon-rpc.com
OPTIMISM_RPC_URL=https://mainnet.optimism.io
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
FANTOM_RPC_URL=https://rpc.ftm.tools
ZKSYNC_RPC_URL=https://mainnet.era.zksync.io
LINEA_RPC_URL=https://rpc.linea.build

# WebSocket Endpoints
BSC_WS_URL=wss://bsc-ws-node.nariox.org:443
ETHEREUM_WS_URL=wss://mainnet.infura.io/ws/v3/YOUR_INFURA_KEY
ARBITRUM_WS_URL=wss://arb1.arbitrum.io/feed
BASE_WS_URL=wss://mainnet.base.org
POLYGON_WS_URL=wss://polygon-rpc.com
OPTIMISM_WS_URL=wss://mainnet.optimism.io
AVALANCHE_WS_URL=wss://api.avax.network/ext/bc/C/ws
FANTOM_WS_URL=wss://wsapi.fantom.network
ZKSYNC_WS_URL=wss://mainnet.era.zksync.io/ws
LINEA_WS_URL=wss://rpc.linea.build
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Service Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL=30000
MONITORING_ENDPOINTS=

# Performance Thresholds
MAX_EVENT_LATENCY=50
MIN_CACHE_HIT_RATE=0.9
MAX_MEMORY_USAGE=400
MAX_CPU_USAGE=80

# Arbitrage Configuration
MIN_PROFIT_PERCENTAGE=0.003
MAX_GAS_PRICE=50000000000
CONFIDENCE_THRESHOLD=0.75

# Simulation Mode Configuration
# Set to true to run in simulation mode (no real blockchain connections)
SIMULATION_MODE=false
# Set to true to simulate execution without real transactions
EXECUTION_SIMULATION_MODE=false
# Update interval for simulation events (ms)
SIMULATION_UPDATE_INTERVAL_MS=1000
# Price volatility for simulated events (0.02 = 2%)
SIMULATION_VOLATILITY=0.02

# Event Monitoring
SYNC_EVENTS_ENABLED=true
SWAP_EVENTS_ENABLED=true
MIN_USD_VALUE=1000
SAMPLING_RATE=0.1

# Execution Configuration
# Private keys for each chain (required for execution engine)
# WARNING: Never commit actual private keys! Use environment variables or secrets manager
ETHEREUM_PRIVATE_KEY=
BSC_PRIVATE_KEY=
ARBITRUM_PRIVATE_KEY=
BASE_PRIVATE_KEY=
POLYGON_PRIVATE_KEY=
OPTIMISM_PRIVATE_KEY=
AVALANCHE_PRIVATE_KEY=
FANTOM_PRIVATE_KEY=
ZKSYNC_PRIVATE_KEY=
LINEA_PRIVATE_KEY=
FLASHBOTS_URL=https://relay.flashbots.net

# Security Configuration
# JWT_SECRET=your_jwt_secret_here
# API_KEYS=key1,key2
# WEBHOOK_SECRET=your_webhook_secret

# Alerting (for future use)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Monitoring (for future use)
DATADOG_API_KEY=your_datadog_key
SENTRY_DSN=your_sentry_dsn

# Grafana Cloud (optional - for cloud-hosted monitoring)
# GRAFANA_CLOUD_URL=https://your-stack.grafana.net
# GRAFANA_CLOUD_API_KEY=
# GRAFANA_CLOUD_STACK_ID=
# GRAFANA_CLOUD_PROM_URL=
# GRAFANA_CLOUD_PROM_USERNAME=

