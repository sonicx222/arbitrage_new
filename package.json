{
  "name": "professional-arbitrage-system",
  "version": "1.0.0",
  "description": "Professional arbitrage detection system with microservices architecture",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects unit",
    "test:unit:shard1": "jest --selectProjects unit --shard=1/3",
    "test:unit:shard2": "jest --selectProjects unit --shard=2/3",
    "test:unit:shard3": "jest --selectProjects unit --shard=3/3",
    "test:integration": "jest --selectProjects integration",
    "test:integration:shard1": "jest --selectProjects integration --shard=1/2",
    "test:integration:shard2": "jest --selectProjects integration --shard=2/2",
    "test:e2e": "jest --selectProjects e2e --passWithNoTests",
    "test:performance": "jest --selectProjects performance",
    "test:smoke": "jest --selectProjects smoke",
    "test:perf": "npm test && node scripts/analyze-performance.js",
    "test:ci": "jest --ci --coverage --selectProjects unit integration --coverageThreshold='{}'",
    "test:debug": "DEBUG_TESTS=true jest --runInBand",
    "test:professional-quality": "node scripts/run-professional-quality-tests.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prebuild": "node scripts/validate-build.js",
    "build": "npm run build:deps && tsc -p tsconfig.json",
    "build:deps": "npm run build:types && npm run build:config && npm run build:core && npm run build:ml",
    "build:types": "cd shared/types && npm run build",
    "build:config": "cd shared/config && npm run build",
    "build:core": "cd shared/core && npm run build",
    "build:ml": "cd shared/ml && npm run build",
    "build:clean": "npm run clean:cache && node scripts/clean-dist.js && npm run prebuild && npm run build:deps && tsc -p tsconfig.json",
    "build:validate": "node scripts/validate-build.js",
    "build:workspaces": "npm run build --workspaces",
    "clean:cache": "node -e \"const fs=require('fs');const path=require('path');const del=(d,p)=>{try{const f=fs.readdirSync(d,{withFileTypes:true});f.forEach(x=>{const fp=path.join(d,x.name);if(x.isDirectory()&&x.name!=='node_modules')del(fp,p);else if(p.test(x.name)){fs.unlinkSync(fp);console.log('Deleted:',fp)}})}catch{}};del('.',/tsconfig\\.tsbuildinfo$/);console.log('TypeScript cache cleared')\"",
    "clean:all": "npm run clean:cache && rimraf dist node_modules/.cache && npm run clean:workspaces --if-present",
    "start": "npm start --workspaces",
    "dev": "npm run dev --workspaces",
    "validate": "npm run test && npm run lint",
    "quality-check": "npm run test:professional-quality",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "typecheck": "tsc --noEmit",
    "dev:setup": "node scripts/setup-env.js",
    "dev:redis": "docker-compose -f docker-compose.local.yml up -d redis",
    "dev:redis:memory": "node scripts/start-redis-memory.js",
    "dev:redis:ui": "docker-compose -f docker-compose.local.yml --profile debug up -d",
    "dev:redis:down": "docker-compose -f docker-compose.local.yml down",
    "dev:redis:logs": "docker-compose -f docker-compose.local.yml logs -f redis",
    "dev:coordinator": "ts-node -r dotenv/config -r tsconfig-paths/register services/coordinator/src/index.ts",
    "dev:detector": "ts-node -r dotenv/config -r tsconfig-paths/register services/unified-detector/src/index.ts",
    "dev:partition:asia": "cross-env PARTITION_ID=asia-fast HEALTH_CHECK_PORT=3001 ts-node -r dotenv/config -r tsconfig-paths/register services/partition-asia-fast/src/index.ts",
    "dev:partition:l2": "cross-env PARTITION_ID=l2-turbo HEALTH_CHECK_PORT=3002 ts-node -r dotenv/config -r tsconfig-paths/register services/partition-l2-turbo/src/index.ts",
    "dev:partition:high": "cross-env PARTITION_ID=high-value HEALTH_CHECK_PORT=3003 ts-node -r dotenv/config -r tsconfig-paths/register services/partition-high-value/src/index.ts",
    "dev:cross-chain": "cross-env HEALTH_CHECK_PORT=3006 ts-node -r dotenv/config -r tsconfig-paths/register services/cross-chain-detector/src/index.ts",
    "dev:execution": "cross-env HEALTH_CHECK_PORT=3005 ts-node -r dotenv/config -r tsconfig-paths/register services/execution-engine/src/index.ts",
    "dev:start": "npm run dev:redis && npm run build && node scripts/start-local.js",
    "dev:stop": "npm run dev:redis:down && node scripts/stop-local.js",
    "dev:status": "node scripts/status-local.js",
    "dev:cleanup": "node scripts/cleanup-services.js",
    "dev:simulate": "cross-env SIMULATION_MODE=true npm run dev:start",
    "dev:simulate:execution": "cross-env EXECUTION_SIMULATION_MODE=true npm run dev:start",
    "dev:simulate:full": "cross-env SIMULATION_MODE=true EXECUTION_SIMULATION_MODE=true npm run dev:start",
    "dev:execution:simulate": "cross-env EXECUTION_SIMULATION_MODE=true HEALTH_CHECK_PORT=3005 ts-node -r dotenv/config -r tsconfig-paths/register services/execution-engine/src/index.ts",
    "dev:partitions:build": "docker-compose -f docker-compose.partitions.yml build",
    "dev:partitions:up": "docker-compose -f docker-compose.partitions.yml up -d",
    "dev:partitions:down": "docker-compose -f docker-compose.partitions.yml down",
    "dev:partitions:logs": "docker-compose -f docker-compose.partitions.yml logs -f",
    "dev:partitions:status": "docker-compose -f docker-compose.partitions.yml ps",
    "dev:partitions:restart": "docker-compose -f docker-compose.partitions.yml restart",
    "generate:error-selectors": "ts-node scripts/generate-error-selectors.ts"
  },
  "workspaces": [
    "shared/*",
    "services/*",
    "infrastructure/*",
    "contracts"
  ],
  "private": true,
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "eslint": "^9.10.0",
    "jest": "^29.7.0",
    "lru-cache": "^11.0.0",
    "redis-memory-server": "^0.15.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "ethers": "^6.16.0",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.23.8"
  },
  "overrides": {
    "rimraf": "^6.0.1",
    "glob": "^11.0.0",
    "tar": "^7.5.6",
    "diff": "8.0.3",
    "cookie": "^1.1.1",
    "undici": "^7.19.1",
    "@mapbox/node-pre-gyp": {
      "tar": "^7.5.6"
    },
    "@tensorflow/tfjs-node": {
      "tar": "^7.5.6",
      "@mapbox/node-pre-gyp": {
        "tar": "^7.5.6"
      }
    },
    "redis-memory-server": {
      "tar": "^7.5.6"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Professional Arbitrage System",
  "license": "MIT"
}