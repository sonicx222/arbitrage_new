{
  "name": "professional-arbitrage-system",
  "version": "1.0.0",
  "description": "Professional arbitrage detection system with microservices architecture",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=\"\\.test\\.ts$\" --testPathIgnorePatterns=\"integration|performance\"",
    "test:integration": "jest --testPathPattern=\"integration\"",
    "test:performance": "jest --testPathPattern=\"performance\"",
    "test:professional-quality": "node scripts/run-professional-quality-tests.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsc -p tsconfig.json",
    "build:clean": "rimraf dist && tsc -p tsconfig.json",
    "build:workspaces": "npm run build --workspaces",
    "start": "npm start --workspaces",
    "dev": "npm run dev --workspaces",
    "validate": "npm run test && npm run lint",
    "quality-check": "npm run test:professional-quality",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "typecheck": "tsc --noEmit",
    "dev:setup": "cp .env.local .env 2>/dev/null || copy .env.local .env",
    "dev:redis": "docker-compose -f docker-compose.local.yml up -d redis",
    "dev:redis:ui": "docker-compose -f docker-compose.local.yml --profile debug up -d",
    "dev:redis:down": "docker-compose -f docker-compose.local.yml down",
    "dev:redis:logs": "docker-compose -f docker-compose.local.yml logs -f redis",
    "dev:coordinator": "ts-node services/coordinator/src/index.ts",
    "dev:detector": "ts-node services/unified-detector/src/index.ts",
    "dev:partition:asia": "cross-env PARTITION_ID=asia-fast HEALTH_CHECK_PORT=3001 ts-node services/partition-asia-fast/src/index.ts",
    "dev:partition:l2": "cross-env PARTITION_ID=l2-turbo HEALTH_CHECK_PORT=3002 ts-node services/partition-l2-turbo/src/index.ts",
    "dev:partition:high": "cross-env PARTITION_ID=high-value HEALTH_CHECK_PORT=3003 ts-node services/partition-high-value/src/index.ts",
    "dev:cross-chain": "cross-env HEALTH_CHECK_PORT=3004 ts-node services/cross-chain-detector/src/index.ts",
    "dev:execution": "cross-env HEALTH_CHECK_PORT=3005 ts-node services/execution-engine/src/index.ts",
    "dev:start": "npm run dev:redis && npm run build && node scripts/start-local.js",
    "dev:stop": "npm run dev:redis:down && node scripts/stop-local.js",
    "dev:status": "node scripts/status-local.js",
    "dev:simulate": "cross-env SIMULATION_MODE=true npm run dev:start",
    "dev:partitions:build": "docker-compose -f docker-compose.partitions.yml build",
    "dev:partitions:up": "docker-compose -f docker-compose.partitions.yml up -d",
    "dev:partitions:down": "docker-compose -f docker-compose.partitions.yml down",
    "dev:partitions:logs": "docker-compose -f docker-compose.partitions.yml logs -f",
    "dev:partitions:status": "docker-compose -f docker-compose.partitions.yml ps",
    "dev:partitions:restart": "docker-compose -f docker-compose.partitions.yml restart"
  },
  "workspaces": [
    "shared/*",
    "services/*",
    "infrastructure/*"
  ],
  "private": true,
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "eslint": "^9.10.0",
    "jest": "^29.7.0",
    "lru-cache": "^11.0.0",
    "redis-memory-server": "^0.14.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "ethers": "^6.16.0",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2"
  },
  "overrides": {
    "rimraf": "^6.0.1",
    "glob": "^11.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Professional Arbitrage System",
  "license": "MIT"
}
