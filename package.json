{
  "name": "professional-arbitrage-system",
  "version": "1.0.0",
  "description": "Professional arbitrage detection system with microservices architecture",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=\"\\.test\\.ts$\" --testPathIgnorePatterns=\"integration|performance\"",
    "test:integration": "jest --testPathPattern=\"integration\"",
    "test:performance": "jest --testPathPattern=\"performance\"",
    "test:professional-quality": "node scripts/run-professional-quality-tests.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "npm run build --workspaces",
    "start": "npm start --workspaces",
    "dev": "npm run dev --workspaces",
    "validate": "npm run test && npm run lint",
    "quality-check": "npm run test:professional-quality",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "workspaces": [
    "shared/*",
    "infrastructure/*"
  ],
  "private": true,
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^9.10.0",
    "jest": "^29.7.0",
    "lru-cache": "^11.0.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "ethers": "^6.16.0",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2"
  },
  "overrides": {
    "rimraf": "^6.0.1",
    "glob": "^11.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Professional Arbitrage System",
  "license": "MIT"
}
