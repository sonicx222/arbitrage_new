{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "ES2022"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@arbitrage/types": [
        "../../shared/types/src"
      ],
      "@arbitrage/types/*": [
        "../../shared/types/src/*"
      ],
      "@arbitrage/config": [
        "../../shared/config/src"
      ],
      "@arbitrage/config/*": [
        "../../shared/config/src/*"
      ],
      "@arbitrage/core": [
        "../../shared/core/src"
      ],
      "@arbitrage/core/*": [
        "../../shared/core/src/*"
      ],
      "@arbitrage/security": [
        "../../shared/security/src"
      ],
      "@arbitrage/security/*": [
        "../../shared/security/src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "../../shared/types"
    },
    {
      "path": "../../shared/config"
    },
    {
      "path": "../../shared/core"
    },
    {
      "path": "../../shared/security"
    }
  ]
}